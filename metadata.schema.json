{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "name",
        "addresses"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_.-]+$"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string",
            "minLength": 16,
            "maxLength": 80
        },
        "addresses": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/ServerAddress"
            }
        },
        "primaryAddress": {
            "$ref": "#/definitions/ServerAddress"
        },
        "minecraftVersions": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/MinecraftVersion"
            }
        },
        "primaryMinecraftVersion": {
            "$ref": "#/definitions/MinecraftVersion"
        },
        "primaryColor": {
            "$ref": "#/definitions/RGBColor"
        },
        "secondaryColor": {
            "$ref": "#/definitions/RGBColor"
        },
        "primaryLanguage": {
            "$ref": "#/definitions/Language"
        },
        "languages": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/Language"
            }
        },
        "primaryRegion": {
            "$ref": "#/definitions/Region"
        },
        "regions": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/Region"
            }
        },
        "gameTypes": {
            "type": "array",
            "uniqueItems": true,
            "maxItems": 3,
            "items": {
                "$ref": "#/definitions/GameType"
            }
        }
    },
    "definitions": {
        "ServerAddress": {
            "type": "string",
            "pattern": "^[a-z0-9_.-]+$"
        },
        "MinecraftVersion": {
            "type": "string",
            "enum": [
                "1.7",
                "1.8",
                "1.12",
                "1.16",
                "1.17",
                "1.18",
                "1.19"
            ]
        },
        "Region": {
            "type": "string",
            "enum": [
                "AF",
                "AS",
                "EU",
                "NA",
                "OC",
                "SA"
            ]
        },
        "Language": {
            "type": "string",
            "enum": [
                "en",
                "es-EN",
                "it",
                "tr",
                "ar",
                "zh-CN",
                "nl",
                "fr",
                "de",
                "el",
                "ja",
                "ko",
                "lt",
                "no",
                "pl",
                "pt-PT",
                "pt-BR",
                "sv-SE"
            ]
        },
        "RGBColor": {
            "type": "string",
            "pattern": "^#([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"
        },
        "GameType": {
            "type": "string",
            "enum": [
                "PvP",
                "PvE",
                "HCF",
                "Factions",
                "Minigames",
                "Skyblock",
                "Parkour",
                "UHC",
                "Hardcore",
                "Survival",
                "Open World",
                "Prison",
                "Creative",
                "Roleplay",
                "Adventure"
            ]
        }
    }
}